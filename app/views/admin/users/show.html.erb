<div class="headings">
  <h2>User Information</h2>
</div>
<dl class="dl-horizontal">
  <dt><strong>Name:</strong></dt>
  <dd><%= @user.first_name + " " + @user.last_name %></dd>
  <dt><strong>Email:</strong></dt>
  <dd><%= @user.email %></dd>
  <dt><strong>Privilege:</strong></dt>
  <dd>
    <% if @user.user_type == "normal" %>
      User
    <%else%>
      <%= @user.user_type %>
    <%end%>
  </dd>
</dl>
<div class="alignment">
  <%= link_to "Back", admin_users_path, :class => 'btn btn-primary'  %>
  <%= link_to "Edit", edit_admin_user_path(@user), :class => 'btn btn-warning' %>
  <span class='user_delete disable btn btn-danger'>Delete</span>
</div>


