<%- model_class = User -%>
<div class="page-header">
   <h2><%= "USERS" %></h2>
</div>
<div class="new_button">
  <%= link_to t('.new', :default => t("helpers.links.new")),new_admin_user_path,:class => 'btn new_button btn-primary' %>
</div>
<table class="table table-striped userss">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:type) %> </th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody> 
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.id, admin_user_path(user) %></td>
        <td><%= link_to user.first_name + " " + user.last_name , admin_user_path(user.id)%></td>
        <td><%= user.email %></td>
        <td>
          <% if user.user_type == "normal" %>
            <%= "User" %>
          <%else%>
            <%= user.user_type%>     
          <%end%>
          </td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),                 edit_admin_user_path(user), :class => 'btn btn-mini btn-primary' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),admin_user_path(user),:method => :delete,:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },:class => 'btn btn-mini btn-danger' %>
          <%= link_to "vouchers",admin_vouchers_path(user), :class => 'btn btn-mini btn-primary' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%=paginate @users ,:remote=>true%>
