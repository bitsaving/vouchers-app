<div class ="comment_tab">
<div class ="comment_panel">
  <div class ="comments">
    <%if voucher.drafted? || @voucher.comments.exists? %>
      <h6> Comments </h6>  
    <%end%>
    <% voucher.comments.each do |comment| %>
      <div class = "commentator">
        <%= simple_format(comment.description) %>
        <div class ="commentator_name">
          <%= comment.user.first_name  + " ,"%>
          <%= comment.updated_at.to_s(:short_ordinal)%>
        </div>
      </div>
    <% end %>
    <% if voucher.assignee?(current_user) && !voucher.accepted? %>
      <%= render :partial => 'comments/form' %>
    <%end%>
  </div>
</div>
</div>