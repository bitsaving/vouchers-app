 <%= form_tag comments_path(voucher_id: @voucher.id) ,:class=>"assign_form" do %>
  
    <div class="add_comments onprint">
      <div class="control-group">
        <div class="controls">
          <%= text_area_tag :description, params[:description],:cols => 80, :rows => 5 ,placeholder: 'Enter your comment..'%>
        </div>
      </div>
      <div class="actions">
        <%= submit_tag "Save comment" ,:class => 'btn btn-primary',data: { disable_with: "Please wait..." }%>
      </div>

      
    <% end %>
</div>