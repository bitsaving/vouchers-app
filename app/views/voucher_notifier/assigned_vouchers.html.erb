<div style="font-size:16px;"> Hi  <%= @user.name %> </div>
<h4>Following is the list of vouchers assigned to you</h5>
	<div style="font-weight:normal;">
<%if @user.assigned_vouchers.drafted.count > 0 %>
  <h3> Drafted </h3>
  <% @user.assigned_vouchers.drafted.each do |voucher| %>
	 	<div >
		  <span><span style="font-weight:bold; font-size:12px;">#<%= voucher.id %></span></span>
			<span><span style="font-weight:bold; font-size:12px;padding-left:16px;">Debit : </span>
