<div class="reports">
<%= form_tag generate_report_path ,:method=>'get' do %>
  <div class = "report">
    <div class="control-group"> 
      <%=label_tag  :from ,"From", :class => 'control-label' %>
      <div class="controls">
        <%= text_field_tag :from , params[:from], :class => 'date-field'  %>
      </div>
    </div>
    <div class="control-group">
      <%=label_tag  :to ,"To", :class => 'control-label' %>
      <div class="controls">
        <%= text_field_tag :to  ,params[:to] ,:class => 'date-field' %>
      </div>
    </div>
    <div class="control-group account_dropdown">
      <%=label_tag  :account ,"Account", :class => 'control-label' %>
      <div class="controls">
        <%= select_tag :account  ,options_for_select(account_options),:prompt=>"Select"%>
      </div>
    </div>
    
    <div class="control-group account_dropdown">
      <%=label_tag  :account_type ,"Type", :class => 'control-label' %>
      <div class="controls">
        <%= select_tag :account_type  ,options_for_select(Account::TYPES),:prompt=>"Select"%>
      </div>
    </div>
    <div class="display_vouchers">
      <%=submit_tag "Generate Report",:class => 'btn btn-primary' ,:id=> "generate_vouchers"%>
    </div>
  </div>
<%end%>
</div>