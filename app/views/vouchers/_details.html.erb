<tr></tr>
<%= tag("tr", data: {id: @voucher.id} ,:class => "show_details hidden" )%>
<td class ="upper"> 
  #<%= @voucher.id %>
</td>
<td class="date">
  <%= @voucher.date.to_s(:string_format) %>
</td>
<td class="lower">
  DEBIT 
</td>
<td class="lower">
  <% voucher.debit_from.each do |debit| %>
    <%= link_to debit.name, account_vouchers_path(Account.find(debit)),:class=>'debit_credit'%>
    <strong><%=" - ₹ " + voucher.transactions.where(account_id: debit.id).where(account_type: "debit").first.amount.to_s  %><br></strong>
  <%end%>
</td>
<td class="lower">
  CREDIT 
</td>
<td class="lower">
  <% voucher.credit_to.each do |credit| %>
    <%= link_to credit.name, account_vouchers_path(Account.find(credit)),:class=>'debit_credit'%>
    <strong><%=" - ₹ " + voucher.transactions.where(account_id: credit.id).where(account_type: "credit").first.amount.to_s  %><br></strong>
  <%end%>
</td>
<td class="amount">
  Amount : 
	<% @sum = 0 %>
  <%voucher.transactions.where(account_type: "debit").each do |voucherr| %>
    <% @sum += voucherr.amount %>
  <%end%> 
  <%= number_to_currency(@sum,:unit => "₹  ") %>
</td>
<td width="40px"></td>
<%#end%>
<% if @voucher.to_date %>
  <td  class="paymentmode"> 
    From : <%= @voucher.from_date.to_s(:normal_format) %>  To : <%= @voucher.to_date.to_s(:normal_format) %>
  </td>
<%end%>
</tr>
