<div class="all_vouchers">
<div class="new_button">
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_voucher_path,
            :class => 'btn new_button btn-primary' %>
</div>
</div>

<div class = "span9  associated_voucher all_vouchers">
  <ul class="nav nav-tabs">
  	<li class="active new"><%= link_to "My Draft" ,new_vouchers_vouchers_path(user_id: current_user.id) ,:remote=>true%></li>
    <li class="pending"><%= link_to "Pending" ,pending_vouchers_vouchers_path ,:remote=>true%></li>
    <li class="approved"><%= link_to "Approved" ,approved_vouchers_vouchers_path,:remote=>true%></li>
    <li class="accepted"><%= link_to "Accepted" ,accepted_vouchers_vouchers_path,:remote=>true%></li>
    <li class="rejected"><%= link_to "Rejected" ,rejected_vouchers_vouchers_path ,:remote=>true%></li>
    <div class ="voucher_status">
      <%= render :template => 'vouchers/_vouchers' , locals: {vouchers: get_new_of_users(current_user.id)}  %>
     </div>
  </ul>
</div>
