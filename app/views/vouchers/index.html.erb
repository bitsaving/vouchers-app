<%- model_class = Voucher -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:date) %></th>
      <th><%= model_class.human_attribute_name(:pay_type) %></th>
      <th><%= model_class.human_attribute_name(:bill_attachment) %></th>
      <th><%= model_class.human_attribute_name(:debit_from_id) %></th>
      <th><%= model_class.human_attribute_name(:credit_to_id) %></th>
      <th><%= model_class.human_attribute_name(:from_date) %></th>
      <th><%= model_class.human_attribute_name(:to_date) %></th>
      <th><%= model_class.human_attribute_name(:amount) %></th>
      <th><%= model_class.human_attribute_name(:transfer_from_id) %></th>
      <th><%= model_class.human_attribute_name(:transfer_to_id) %></th>
      <!-- <th><%= model_class.human_attribute_name(:avatar_file_name) %></th>
      <th><%= model_class.human_attribute_name(:avatar_content_type) %></th>
      <th><%= model_class.human_attribute_name(:avatar_file_size) %></th>
      <th><%= model_class.human_attribute_name(:avatar_updated_at) %></th> -->
     <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @vouchers.each do |voucher| %>
      <tr>
        <td><%= link_to voucher.id, voucher_path(voucher) %></td>
        <td><%= voucher.date %></td>
        <td><%= voucher.pay_type %></td>
        <td><%= voucher.bill_attachment %></td>
        <td><%= voucher.debit_from_id %></td>
        <td><%= voucher.credit_to_id %></td>
        <td><%= voucher.from_date %></td>
        <td><%= voucher.to_date %></td>
        <td><%= voucher.amount %></td>
        <td><%= voucher.transfer_from_id %></td>
        <td><%= voucher.transfer_to_id %></td>
       
  
        <td><%=l voucher.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_voucher_path(voucher), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      voucher_path(voucher),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_voucher_path,
            :class => 'btn btn-primary' %>
