<% #FIXME_AB: HTML indentation is weired -%>
<div class="page-header">
<h3> Accounts </h3>
</div>
<div class="new_button">
  <% #FIXME_AB: Lets not use translations as we are not using other places. Make this change through out the app -%>
  <%#fixed%>
<%= link_to "New",new_account_path,:class => 'btn new_button btn-primary' %>
</div>
<% #FIXME_AB: @accounts.count > 0 can be written as @accounts.present? for better code readability  -%>
<%#fixed%>
<% if @accounts.present? %>
  <table class="table table-striped accountss">
    <thead>
      <tr>
        <th width= "90%"><%= "Name" %></th>
        <th width= "10%"><%= "Actions" %></th>
      </tr>
    </thead>
    <tbody>
     <% @accounts.each do |account| %>
        <tr>
          <td><%= link_to account.name, account_path(account) %></td>
          <td><%= link_to "Edit",edit_account_path(account), :class => 'btn btn-mini btn-primary' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%=paginate @accounts, :remote => true %>
 <%end%>